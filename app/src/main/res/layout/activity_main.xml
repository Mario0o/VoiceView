<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:yyh = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yyh.voiceview.MainActivity">

    <com.example.yyh.voiceview.VoiceView
        android:id="@+id/viewone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        yyh:firstColor="#00ff00"
        yyh:secondColor="#2323ff"
        yyh:bg="@mipmap/ic_launcher"
        yyh:circleWidth="5dp"
        yyh:splitSize="30"
        yyh:dotCount="15"

        />

    <com.example.yyh.voiceview.VoiceView
        android:layout_width="100dp"
        android:layout_height="100dp"

        yyh:bg="@mipmap/ic_launcher"


        android:layout_below="@id/viewone"

        />


</RelativeLayout>
